<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_with_ActionBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="themedBtn">
        <item name="android:textColor">@color/BBQWhite</item>
        <item name="android:backgroundTint">@color/BBQPastelPurp</item>
    </style>

    <style name="themedBtn_createAccount_sub_menu" parent="themedBtn">
        <item name="android:layout_marginTop">@dimen/sub_menu_marginTop</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cust_queue_editText">
        <item name="android:layout_width">304dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/LightGrey</item>
    </style>

    <style name="customer_account_editText">
        <item name="android:layout_width">250dp</item>
        <item name="android:ems">10</item>
    </style>
    
    <style name="customer_account_btn" parent="themedBtn">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="customer_account_textView">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="in_queue_textView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="splash_login_editText">
        <item name="android:layout_width">250dp</item>
        <item name="android:ems">10</item>
        <item name="layout_gravity">center</item>
    </style>
    
    <style name="seating_list_layout_textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="table_list_item_textView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="splash_login_btn" parent="themedBtn">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="hours_op_dialog_editText">
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">time</item>
    </style>

    <style name="cust_queue_btn">
        <item name="android:layout_width">138dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/ResList_font_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="openTable">
        <item name="android:colorBackground">@color/GreenYellow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>