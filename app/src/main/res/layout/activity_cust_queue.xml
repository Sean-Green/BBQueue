                    android:textSize="@dimen/ResList_font_size"/>
            </LinearLayout>



        </GridLayout>
        <GridLayout
            android:id="@+id/gridRes3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:columnCount="2"
            android:background="@android:color/darker_gray">

            <TextView
                android:id="@+id/CustName3"
                android:layout_height="35dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="53dp"
                android:text="@string/CustQueueCustName"
                android:textSize="@dimen/ResList_font_size"/>
            <TextView
                android:id="@+id/CustPartySize3"
                android:layout_height="35dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="53dp"
                android:text="@string/CustQueueCustPartySize"
                android:textSize="@dimen/ResList_font_size"
                />
            <TextView
                android:id="@+id/CustPhoneNumber3"
                android:layout_height="35dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginStart="53dp"
                android:text="@string/CustQueueCustPhoneNumber"
                android:textSize="@dimen/ResList_font_size"
                />
            <LinearLayout
                android:id="@+id/linearOption3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_row="3"
                android:layout_column="0">



                <Button
                    android:id="@+id/TextCust3"
                    android:layout_width="138dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:text="@string/CustQueueTextCust"
                    android:textSize="@dimen/ResList_font_size"/>

                <Button
                    android:id="@+id/CallCust3"
                    android:layout_width="138dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/CustQueueCallCust"
                    android:textSize="@dimen/ResList_font_size"/>
            </LinearLayout>



        </GridLayout>
        <GridLayout
            android:id="@+id/gridRes4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:columnCount="2"
            android:background="@android:color/darker_gray">

