                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:text="@string/CustQueueTextCust"
                    android:textSize="@dimen/ResList_font_size"/>

                <Button
                    android:id="@+id/CallCust4"
                    android:layout_width="138dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/CustQueueCallCust"
                    android:textSize="@dimen/ResList_font_size"/>
            </LinearLayout>



        </GridLayout>
    </LinearLayout>
</ScrollView>